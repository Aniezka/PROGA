import os

max_files_folder = ''  # в этой строке будет храниться текущее название папки с максимальным количеством
max_n_files = -1  # в этой переменной будет храниться текущее максимальное количество файлов

start_path = os.path.abspath('.')  # получаем абсолютное имя папки из относительного

for root, dirs, files in os.walk(start_path):  # проходимся по всему содержимому папки start_path

    """
    print('Где мы сейчас:', root)  # печатаем текущуу папку

    if len(dirs) == 0:  # если в текущей папке нет папок
        print('На данном уровне нет папок')
    else:
        print('Папки на этом уровне:', ', '.join(dirs))  # вставляем ', ' после каждого элемента списка dirs и печатаем на экран

    if len(files) == 0:  # если в текущей папке нет файлов
        print('На данном уровне нет файлов')
    else:
        print('Файлы на этом уровне:', ', '.join(files))  # вставляем ', ' после каждого элемента списка files и печатаем на экран

    print('\n')
    """

    if len(files) > max_n_files:  # если в текущей папке файлов больше, чем max_n_files
        max_n_files = len(files)  # меняем значение max_n_files на количество файлов в текущей папке
        max_files_folder = root  # меняем значение max_files_folder на имя текущей папки

result_folder_list = max_files_folder.split(os.sep)  # создаем список из строк, которые были разделены '/' в строке max_files_folder
result_folder = result_folder_list[-1]  # берем последний элемент этого списка
print('Папка с максимальным количеством файлов:', result_folder)
print('Максимальное количество файлов:', max_n_files)
